
    

    <div class="container my-5">
        <div class="row justify-content-center">
         <div class="col-md-5">
          <a class="btn btn-warning" href="/student">Back</a>
          <br>
          <br>
              <div class="card" >
                  <div class="card body">
                      <h2 class="text-center my-2">EDIT ALL STUDENT</h2>
                      <hr>
                 
                          <form action="/student/update/<%=singleData._id%>" method="POST" enctype="multipart/form-data">
                              <div class="my-3">
                                  <label for="">NAME</label>
                                  <input value="<%=singleData.name%>" name="name" type="text" class="form-control bg-warning text-black">
                              </div>
                              <div class="my-3">
                                  <label for="">EMAIL</label>
                                  <input value="<%=singleData.email%>" name="email" type="text" class="form-control bg-warning text-black">
                              </div>
                              <div class="my-3">
                                  <label for="">NUMBER</label>
                                  <input value="<%=singleData.cell%>" name="cell" type="text" class="form-control bg-warning text-black">
                              </div>
                              <div class="my-3">
                                  <label for="">PHOTO</label>
                                  <input  value="<%=singleData.photo%>" name="oldphoto" type="hidden" class="">
                                  <img style="width : 200px " src="/assets/upload/<%= singleData.photo%>" alt="">
                                  <input name="photo" type="file" class="formcontrol">
                              </div>
                              <div class="my-3">
                                <input type="submit" class=" btn btn-primary" >
                              </div>
                          </form>
                  </div>
              </div>
          </div>
        </div>
      </div>
  
  
  
  
  
  
  
  